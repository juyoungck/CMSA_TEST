<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp" >

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="38dp"
                android:id="@+id/btnBack_detail"
                android:background="#00ff0000"
                android:src="@drawable/arrow_back"
                android:layout_marginLeft="-10dp"
                android:layout_marginTop="-10dp"/>

            <TextView
                android:layout_marginTop="-10dp"
                android:textAlignment="center"
                android:textSize="30sp"
                android:layout_width="315dp"
                android:layout_height="40dp"
                android:text="상세정보"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_gravity="right"
            android:gravity="end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/detail_Cancle"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:textAlignment="center"
                android:button="@null"
                android:background="#e9ecef"
                android:text="취소"
                android:drawableLeft="@drawable/cancle"/>

            <CheckBox
                android:id="@+id/detail_Modify"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_gravity="right|center"
                android:layout_marginLeft="10dp"
                android:textAlignment="center"
                android:button="@null"
                android:background="#e9ecef"
                android:text="수정"
                android:drawableLeft="@drawable/edit"/>

            <Button
                android:id="@+id/detail_Delete"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_gravity="right|center"
                android:layout_marginLeft="10dp"
                android:textAlignment="center"
                android:button="@null"
                android:background="#e9ecef"
                android:text="삭제"
                android:drawableLeft="@drawable/delete"/>

        </LinearLayout>

        <ImageButton
            android:layout_marginTop="20dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/detail_cod_img"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center"
            android:background="#00ff0000"
            android:src="@drawable/baseline_add_box_24"
            android:scaleType="fitCenter"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="코디 위치"
            android:layout_marginLeft="10dp"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/detail_cod_loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="코디 이름"
            android:layout_marginLeft="10dp"
            android:textSize="20dp" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_cod_name"
            android:enabled="false"
            android:text="코디 이름"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="8dp"/>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="4"
            android:columnCount="2"
            android:layout_gravity="center">

            <Button
                android:id="@+id/detail_cod_top"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="#FFFFFF"
                android:drawableTop="@drawable/baseline_add_box_24"
                android:text="상의"/>

            <Button
                android:id="@+id/detail_cod_bottom"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="#FFFFFF"
                android:drawableTop="@drawable/baseline_add_box_24"
                android:text="하의"/>

            <Button
                android:id="@+id/detail_cod_shoes"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="#FFFFFF"
                android:drawableTop="@drawable/baseline_add_box_24"
                android:text="신발"/>

            <Button
                android:id="@+id/detail_cod_outer"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="#FFFFFF"
                android:drawableTop="@drawable/baseline_add_box_24"
                android:text="외투"/>

            <Button
                android:id="@+id/detail_cod_underwear"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="#FFFFFF"
                android:drawableTop="@drawable/baseline_add_box_24"
                android:text="속옷"/>

            <Button
                android:id="@+id/detail_cod_socks"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="#FFFFFF"
                android:drawableTop="@drawable/baseline_add_box_24"
                android:text="양말"/>

            <Button
                android:id="@+id/detail_cod_accessory"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="#FFFFFF"
                android:drawableTop="@drawable/baseline_add_box_24"
                android:text="액세서리"/>

            <Button
                android:id="@+id/detail_cod_bag"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="#FFFFFF"
                android:drawableTop="@drawable/baseline_add_box_24"
                android:text="가방"/>
        </GridLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="50dp" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="태그"
                android:textSize="18dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp">

            <CheckBox
                android:id="@+id/weatherSelect_spring"
                android:enabled="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:text="봄"
                android:textAlignment="center"
                android:background="#f1f3f5" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:text="여름"
                android:textAlignment="center"
                android:background="#f1f3f5"
                android:id="@+id/weatherSelect_summer"
                android:enabled="false"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="가을"
                android:layout_weight="1"
                android:button="@null"
                android:textAlignment="center"
                android:background="#f1f3f5"
                android:id="@+id/weatherSelect_fall"
                android:enabled="false"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="겨울"
                android:layout_weight="1"
                android:button="@null"
                android:textAlignment="center"
                android:background="#f1f3f5"
                android:id="@+id/weatherSelect_winter"
                android:enabled="false"/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="전체"
                android:layout_weight="1"
                android:button="@null"
                android:textAlignment="center"
                android:background="#f1f3f5"
                android:id="@+id/weatherSelect_communal"
                android:enabled="false"/>
        </LinearLayout>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="등록 날짜"
            android:layout_marginLeft="10dp"
            android:textSize="20dp" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_cod_date"
            android:enabled="false"
            android:text="날짜"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="8dp"/>

    </LinearLayout>

</ScrollView>
